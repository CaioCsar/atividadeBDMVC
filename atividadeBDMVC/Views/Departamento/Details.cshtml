@model atividadeBDMVC.Models.Departamento

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Departamento</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome),
        </dd>
        <dt class="col-sm-2">
           Instituição:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Instituicao.Nome),
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.DepartamentoID">Editar</a> |
    <a asp-action="Index" class="btn btn-primary">Voltar</a>
</div>
